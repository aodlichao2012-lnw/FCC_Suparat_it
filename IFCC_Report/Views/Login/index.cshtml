        currentUrl = "@Request.Url.Scheme://@Request.Url.Authority@Request.ApplicationPath".replace(/\/\s*$/, "");
        @*$.backstretch("@Url.Content("~/Assets/img/GSM-bg-7.jpg?v=" + @ViewBag.version)", { speed: 500 });*@

    window.localStorage.clear();

    </script>


</body>
