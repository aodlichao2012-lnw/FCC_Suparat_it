    <title>Login</title>
    <link rel="icon" href="@Url.Content("~/Assets/img/favicon.ico?v=" + @ViewBag.Version)">

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Assets/css/bootstrap.css?v=" + ViewBag.Version)" />
    <!--external css-->
