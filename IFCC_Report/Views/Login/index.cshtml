                    <div class="login-wrap">
                  
                        <input type="text" class="form-control" placeholder="Username" autofocus name="username">
                        <br />
                        <input type="password" class="form-control" placeholder="Password" name="password" AUTOCOMPLETE="off">

                        <label class="checkbox">
                            <span class="pull-right">
                                @*<a data-toggle="modal" href="login.html#myModal"> Forgot Password?</a>*@
                            </span>
                        </label>
                        <input type="hidden" name="returnUrl" value="@Request.QueryString["returnUrl"]"  />
                        <button class="btn btn-theme btn-block" type="submit"><i class="fa fa-lock"></i> SIGN IN</button>
                        <br />
                    </div>
                }
            </div>
            <footer class=" navbar-fixed-bottom">

                <div class="col-xs-12">

                    <p style="font-size:large;font-weight:200">IFCC Report Management</p>
                    <p style="font-size:large;font-weight:200"> [ Version 1.0.0 ]  @("@") Copyright 2020 By IT Offcer FCC.Co.,Ltd </p>
                </div>
            </footer>
        </div>
    </div>

    <script src="@Url.Content("~/Assets/plugins/jquery/jquery.min.js?v=" + @ViewBag.version)"></script>
    <!--BACKSTRETCH-->
    <!-- You can use an image of whatever size. This script will stretch to fit in any screen size.-->
