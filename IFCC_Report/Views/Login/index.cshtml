    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="@Url.Content("~/Assets/css/style.css?v=" + ViewBag.Version)" />

    <link rel="stylesheet" href="@Url.Content("~/Assets/css/style-responsive.css?v=" + ViewBag.Version)" />

    <link rel="stylesheet" href="@Url.Content("~/Assets/plugins/select2/css/select2.css?v=" + ViewBag.Version)" />
    <style>

        #background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            /*background-image: url('../images/bg-business2.png');*/
            /*background-image: repeating-linear-gradient(rgb(197, 248, 255) 0%, rgb(0, 195, 226) 50%, rgb(0, 162, 197) 51%, rgb(123, 235, 255) 100%);*/
            /*background-image:radial-gradient(circle farthest-side at 395px 483px, rgb(0, 61, 126) 0%, rgb(5, 84, 255) 74.2%, rgb(1, 92, 204) 83.3%);*/
            background-image: -ms-radial-gradient(left top, circle farthest-corner, #FFFFFF 0%, #00A3EF 100%);
            /* Mozilla Firefox */
            background-image: -moz-radial-gradient(left top, circle farthest-corner, #FFFFFF 0%, #00A3EF 100%);
            /* Opera */
            background-image: -o-radial-gradient(left top, circle farthest-corner, #FFFFFF 0%, #00A3EF 100%);
            /* Webkit (Safari/Chrome 10) */
            background-image: -webkit-gradient(radial, left top, 0, left top, 1012, color-stop(0, #FFFFFF), color-stop(1, #00A3EF));
            /* Webkit (Chrome 11+) */
            background-image: -webkit-radial-gradient(left top, circle farthest-corner, #FFFFFF 0%, #00A3EF 100%),url("../Assets/img/FCC4.jpg");
            /* W3C Markup, IE10 Release Preview */
            background-image: url("./Assets/img/FCC4.jpg"), radial-gradient(circle farthest-corner at left top, #FFFFFF 0%, #00A3EF 100%);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 100%;
            background-position: center;
            /*background-size: auto auto;*/
            z-index: -1000;
            /*opacity: 0.7;*/
        }

        media (min-width: 1200px) {
        }
    </style>
</head>

<body>

    <div id="background"></div>
    <!-- **********************************************************************************************************************************************************
    MAIN CONTENT
    *********************************************************************************************************************************************************** -->

    <div id="login-page">
        <div class="container">
            <div>
                @using (Html.BeginForm("Signin", "Login", FormMethod.Post, new { @class = "form-login", @name = "csrf" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="text-center padding-15">
                        <img src="~/Assets/img/Data MAnagement.png" alt="Report System" width="120" />
                    </div>
                    <h2 class="form-login-heading">Report Management</h2>
                    @*if (!@ViewBag.IsAuth)
                    {
                        <div class="alert alert-danger">
                            <button class="close" data-close="alert"></button>
                            <span>
                                @if (TempData["Message"] != null)
                                {
                                    <text>
                                        @TempData["Message"]
                                    </text>
                                }
                                else if (TempData["InActive"] == null)
                                {
                                    <text>
                                        The username or password is incorrect.
                                    </text>
                                }
                                else
                                {
                                    <text>
                                        Username is inactive. Please contact User Admin
                                    </text>
                                }

                            </span>
                        </div>
